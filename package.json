    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsdom": "^27.2.0",
    "jsonwebtoken": "^9.0.2",
    "marked": "^17.0.1",
